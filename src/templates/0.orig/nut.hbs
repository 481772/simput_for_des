FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [{{{vector nut.dimensions}}}];

internalField   uniform 0;

boundaryField
{
    //- Set patchGroups for constraint patches
    #includeEtc "caseDicts/setConstraintTypes"

    leftWall
    {
        type            calculated;
        value           uniform 0;
    }

    rightWall
    {
        type            calculated;
        value           uniform 0;
    }

    inlet
    {
        type            calculated;
        value           uniform 0;
    }

    outlet
    {
        type            calculated;
        value           uniform 0;
    }

    bottomWall
    {
        type            nutkWallFunction;
        value           uniform 0;
    }

    topWall
    {
        type            calculated;
        value           uniform 0;
    }

    {{{meshGroupName}}}
    {
        type            nutkWallFunction;
        value           uniform 0;
    }
}


