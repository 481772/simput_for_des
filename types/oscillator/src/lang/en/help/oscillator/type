    <mrow class="MJX-TeXAtom-ORD">
      <mstyle displaystyle="true" scriptlevel="0">
        <mi>φ<!-- φ --></mi>
        <mo>=</mo>
        <mi>arctan</mi>
        <mo>⁡<!-- ⁡ --></mo>
        <mrow>
          <mo>(</mo>
          <mrow class="MJX-TeXAtom-ORD">
            <mfrac>
              <mrow>
                <mn>2</mn>
                <mi>ω<!-- ω --></mi>
                <msub>
                  <mi>ω<!-- ω --></mi>
